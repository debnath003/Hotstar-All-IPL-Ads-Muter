{
    "manifest_version": 2,
    "name": "Hotstar All IPL Ads Muter",
    "version": "1.0",
    "description": "Mutes audio on Hotstar during ads in IPL automatically.",
    "icons": {
      "48": "icon_48.png",
      "128": "icon_128.png"
    },
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "tabs",
      "*://*.hotstar.com/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "hotstar-ad-muter@yourname.com",
        "strict_min_version": "91.0"
      }
    }
  }
  